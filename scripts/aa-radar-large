# Split into 4 plots
op <- par(mar=c(1, 2, 2, 1),mfrow=c(2, 2))

# Macapa North
radarchart(mn,
    axistype=1, 
    pcol='blue',
    pfcol = c("#99999980",NA),
    plwd=3, 
    cglcol='grey',
    cglty=1,
    axislabcol='black',
    cglwd=1,
    vlcex=1.1,
    caxislabels = c(-4, -2, 0, 2,  4),
    title='Macapa North'
    )

# Baylique
radarchart(by,
    axistype=1, 
    pcol='blue',
    pfcol = c("#99999980",NA),
    plwd=3, 
    cglcol='grey',
    cglty=1,
    axislabcol='black',
    cglwd=1,
    vlcex=1.1,
    caxislabels = c(--4, -2, 0, 2,  4),
    title='Baylique'
    )

# Macapa South
radarchart(ms,
    axistype=1, 
    pcol='blue',
    pfcol = c("#99999980",NA),
    plwd=3, 
    cglcol='grey',
    cglty=1,
    axislabcol='black',
    cglwd=1,
    vlcex=1.1,
    caxislabels = c(-4, -2, 0, 2,  4),
    title='Macapa South'
    )

# Chaves
radarchart(cv,
    axistype=1, 
    pcol='blue',
    pfcol = c("#99999980",NA),
    plwd=3, 
    cglcol='grey',
    cglty=1,
    axislabcol='black',
    cglwd=1,
    vlcex=1.1,
    caxislabels = c(-4, -2, 0, 2,  4),
    title='Chaves'
    )


par(op)
