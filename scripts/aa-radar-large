                 Phe=c(4, -4, -1.188102),
                 His=c(4, -4, -2.590374),
                 Lys=c(4, -4, -1.029005),
                 Met=c(4, -4, -1.832698),
                 Asn=c(4, -4, 0.506601),
                 Trp=c(4, -4, 0.116875),
                 Tyr=c(4, -4, -2.112181),
                 Gln=c(4, -4, 0.657682))

                                                            

